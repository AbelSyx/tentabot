    </actuator>
    <joint name="rear_right_wheel_hinge">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <!-- Orbbec Astra RGBD Camera -->
  <joint name="astra_joint" type="fixed">
    <axis xyz="0 0 0" />
    <origin xyz="-0.03 0 0.18" rpy="0 0 0"/>
    <parent link="body_link"/>
    <child link="camera_link"/>
  </joint>

  <link name="camera_link">
    <collision>
      <origin xyz="0.02 0 0" rpy="0 0 0"/>
      <geometry>0
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="-0.01 0 -0.03" rpy="1.5707 0 1.5707"/>
      <geometry>
        <mesh filename="package://tentabot/models/husarion_rosbot/meshes/astra.stl" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="Black"/>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
    </inertial>
  </link>

  <joint name="camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    <parent link="camera_link"/>
    <child link="camera_rgb_frame"/>
  </joint>

  <link name="camera_rgb_frame">
  </link>

  <joint name="camera_depth_joint" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    <parent link="camera_link"/>
    <child link="camera_depth_frame"/>
  </joint>

  <link name="camera_depth_frame">
  </link>

  <joint name="rplidar_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.02 0 0.058" rpy="0 0 3.14"/>
    <parent link="body_link"/>
    <child link="laser"/>
  </joint>

  <!-- rplidar Laser -->
  <link name="laser">
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 4.71"/>
      <geometry>
        <mesh filename="package://tentabot/models/husarion_rosbot/meshes/rplidar.stl" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 4.71"/>
      <geometry>
        <mesh filename="package://tentabot/models/husarion_rosbot/meshes/rplidar.stl" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="Black"/>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="1.5707 0 4.71"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
    </inertial>
  </link>

  <joint name="range_fl_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.1 0.05 0.01" rpy="0 0 0.13 "/>
    <parent link="body_link"/>
    <child link="range_fl"/>
  </joint>
  <link name="range_fl"></link>

  <joint name="range_fr_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.1 -0.05 0.01" rpy="0 0 -0.13 "/>
    <parent link="body_link"/>
